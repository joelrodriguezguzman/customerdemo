apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: customer-demo-pvc
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 5Gi
  storageClassName: gp2
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: customer-demo-service-account
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: customer-demo
spec:
  replicas: 1
  selector:
    matchLabels:
      app: customer-demo
  template:
    metadata:
      labels:
        app: customer-demo
    spec:
      serviceAccountName: customer-demo-service-account
      containers:
      - name: customer-demo
        image: your-private-registry-ip:port/customer-demo:latest
        ports:
        - containerPort: 8080
        resources:
          requests:
            cpu: "500m"
            memory: "512Mi"
          limits:
            cpu: "1"
            memory: "1Gi"
        volumeMounts:
        - name: customer-demo-storage
          mountPath: /data
      volumes:
      - name: customer-demo-storage
        persistentVolumeClaim:
          claimName: customer-demo-pvc
---
apiVersion: v1
kind: Service
metadata:
  name: customer-demo-service
spec:
  selector:
    app: customer-demo
  ports:
    - protocol: TCP
      port: 80
      targetPort: 8080
  type: LoadBalancer
